{
	"manifest_version": 2,
	"name": "EasyAccents",
	"version": "1.0",

	"description": "?",
	"icons": {
		"19": "icons/19.png"
	},

	"browser_action": {
		"default_icon": {
			"19": "icons/19.png"
		},
		"default_title": "EasyAccents",
		"default_popup": "popup.html"
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],

	"permissions": ["activeTab", "commands"],

	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Ctrl+Comma"
			}
		}
	}
}
